<body>
  <br><br><br>
  <p id="notice">
 <%=  notice %></p>

  <%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

<% end %>
  <div class="body">
      <div class="container">
      <div class="row">
      <div class="col-xs-3">



<!-- ユーザーインフォ領域 -->
    <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, size: '30x30',　format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody><tr></tr>
                 <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                 </tr>
                 <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
                  <tr>
                  <th>follows</th>
                  <th><%=link_to @user.follower.count, user_follow_path %></th>
                </tr>
                <tr>
                  <th>followers</th>
                  <th><%=link_to @user.followed.count, user_followed_path %></th>
                </tr>
          </tbody>
        </table>
            <!-- フォローボタン -->
            <p>
          <% if current_user.id != @user.id %>
            <% if current_user.following?(@user) %>
            <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST, class: "btn btn-primary "  %>
            <% else %>
            <%= link_to 'フォローする', follow_path(@user.id), method: :POST, class: "btn btn-primary "  %>
            <% end %>
          <% end %>
            </p>
            <!-- フォローボタン終わり -->
      <div class="row">
        　<% if @user.id == current_user.id %>
             <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user" %></p>
            <% end %>
      </div>

<!-- ブック編集領域 -->
    <h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, class: "col-xs-12 book_title"  %>
  <h4>Opinion</h4>
  <%= f.text_area :body, class: "col-xs-12 book_body"  %>
  <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
<% end %>

  　</div>

<% end %>


<!-- 右ボディ -->
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr> 
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book|%>
          <tr>
            <td>
              <%= link_to user_path(book.user), class: 'hoge' do %>
              <%= attachment_image_tag book.user, :profile_image, size: '30x30',　format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %></td>
            <td><%= link_to book_path(book.id), class: 'hoge' do %>
<%= book.title %><% end %></td>
            <td><%= book.body %></td>
          <!-- いいねここから -->
          <% if book.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(book), method: :delete do %>
              <%= book.favorites.count %> いいね
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(book), method: :post do %>
              <%= book.favorites.count %> いいね
            <% end %>
          </td>
          <% end %>
          <!-- ここまで -->
       <!-- コメント数 -->
        <td>コメント数:<%= book.book_comments.count %></td>
        <!-- コメント数終わり -->
         </tr>
      　<% end %>
      </tbody>
    </table>
  </div>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
 </footer>

