<body>
<br><br><br>
    <!-- サクセスメッセージ -->
<div class="container">
  <p id="notice">
 <%=  notice %>
</p>

  <div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, size: '30x30',　format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody><tr></tr>
                 <tr>
              	  <th>name</th>
              	  <th><%= @user.name %></th>
                 </tr>
                 <tr>
              	  <th>introduction</th>
              	  <th><%= @user.introduction %></th>
                </tr>
                  <tr>
                  <th>follows</th>
                  <th><%=link_to @user.follower.count, user_follow_path %></th>
                </tr>
                <tr>
                  <th>followers</th>
                  <th><%=link_to @user.followed.count, user_followed_path %></th>
                </tr>
          </tbody>
        </table>
            <!-- フォローボタン -->
            <p>
          <% if current_user.id != @user.id %>
            <% if current_user.following?(@user) %>
            <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST, class: "btn btn-primary "  %>
            <% else %>
            <%= link_to 'フォローする', follow_path(@user.id), method: :POST, class: "btn btn-primary "  %>
            <% end %>
          <% end %>
            </p>
            <!-- フォローボタン終わり -->
      <div class="row">
      	　<% if @user.id == current_user.id %>
             <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user" %></p>
            <% end %>
      </div>
<!-- ブック編集領域 -->
    <h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@booknew) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, class: "col-xs-12" %>
  <h4>Opinion</h4>
  <%= f.text_area :body, class: "col-xs-12" %>

  <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
<% end %>
</div>

<!-- body右 -->
<div class="col-xs-9">
    <h2>Book detail</h2>

    <table class="table">
    <tbody>
     <tr>
        <td>
          <%= link_to user_path(@user), class: 'hoge' do %>
          <%= attachment_image_tag @user, :profile_image, size: '30x30',　format: 'jpeg', fallback: "no_image.jpg" %><br><%= @user.name %><% end %>
          </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>

        <!-- いいねここから -->
        <% if @book.favorited_by?(current_user) %>
        <td>
          <%= link_to book_favorites_path(@book), method: :delete do %>
            <%= @book.favorites.count %> いいね
          <% end %>
        </td>
        <% else %>
        <td>
          <%= link_to book_favorites_path(@book), method: :post do %>
            <%= @book.favorites.count %> いいね
          <% end %>
        </td>
        <% end %>
        <!-- ここまで -->
        <!-- コメント数 -->
        <td>コメント数:<%= @book.book_comments.count %></td>
        <!-- コメント数終わり -->
        <td><% if @user == current_user %>
          <%=link_to "Edit",edit_book_path(@book),method: :get, class: "btn-sm btn-success" %><% end %>
          </td>

        <td><% if @user == current_user %>
             <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に削除してもよろしいですか？"},class: "btn-sm btn-danger destroy_book_36894" %><% end %></td>
      </tr>
     </tbody>
   </table>
                      <!-- コメント本文 -->
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @book.book_comments.each do |book_comment| %>
      <tbody>
        <tr>
          <td><%= link_to user_path(book_comment.user), class: 'hoge' do %>
          <%= attachment_image_tag @user, :profile_image, size: '30x30',　format: 'jpeg', fallback: "no_image.jpg" %><br><%= book_comment.user.name %><% end %></td>
          <td><p><%= book_comment.comment %></p></td>
          <td><% if book_comment.user == current_user %>
            　 <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %><% end %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
              <!-- コメント本文 -->
           <!-- <form> -->
        <%= form_for [@book, @book_comment] do |f| %>

          <% if @book_comment.errors.any? %>
          <h3><%= @book_comment.errors.count %> errors prohibited this book from being saved</h3>
              <ul>
                <% @book_comment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>

          <% end %>
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
        <% end %>
        <!-- </form> -->
</div>



<!-- フッター -->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
 </footer>
</body>